<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/user_discount_card"
                android:layout_margin="@dimen/dimen_default_margin_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dimen_default_margin_step"
                android:paddingBottom="@dimen/dimen_default_margin_half_step"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/outline_home_24"
                    app:iconGravity="top"
                    app:iconTint="@color/black"
                    app:rippleColor="@android:color/darker_gray"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/black"
                    android:text="@string/label_btn_promos" />
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/outline_home_24"
                    app:iconGravity="top"
                    app:iconTint="@color/black"
                    app:rippleColor="@android:color/darker_gray"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/black"
                    android:text="@string/label_btn_gifts"
                    android:layout_weight="1"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/outline_home_24"
                    app:iconGravity="top"
                    app:iconTint="@color/black"
                    app:rippleColor="@android:color/darker_gray"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/black"
                    android:text="@string/label_btn_rewards"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/gray_200">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:padding="@dimen/dimen_default_margin_step">
                    <com.arsnyan.lamodacopy.ui.customview.ProfileSectionCardView
                        android:id="@+id/btn_orders"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        app:label="@string/label_orders"
                        app:icon="@drawable/outline_shopping_cart_24"
                        app:value="2"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="@dimen/dimen_grid_margin_step"
                        android:layout_marginBottom="@dimen/dimen_grid_margin_step"/>
                    <com.arsnyan.lamodacopy.ui.customview.ProfileSectionCardView
                        android:id="@+id/btn_refunds"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        app:label="@string/lable_refunds"
                        app:icon="@drawable/outline_shopping_cart_24"
                        app:value="0"
                        app:cardElevation="0dp"
                        android:layout_marginStart="@dimen/dimen_grid_margin_step"
                        android:layout_marginBottom="@dimen/dimen_grid_margin_step"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="2"
                        android:layout_marginTop="@dimen/dimen_grid_margin_step"
                        android:layout_marginBottom="@dimen/dimen_grid_margin_step"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_default_margin_step">
                            <LinearLayout
                                android:id="@+id/btn_reviews_questions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:clickable="true"
                                android:focusable="true"
                                android:paddingBottom="@dimen/dimen_default_margin_step"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/outline_shopping_cart_24"
                                    android:importantForAccessibility="no" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="12dp"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                    android:text="@string/label_reviews_questions"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/round_background"
                                    android:text="6/1"/>
                            </LinearLayout>
                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_default_margin_step"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:layout_weight="1"
                                    android:src="@drawable/testing_cloth_preview"
                                    android:importantForAccessibility="no"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="@dimen/dimen_default_margin_step"
                                    android:orientation="vertical"
                                    android:layout_weight="5">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                        android:text="@string/label_rating_profile_action"/>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/boldness_badge"
                                            android:textColor="@color/white"
                                            android:text="@string/label_bonuses"
                                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="8dp"
                                            android:text="@string/label_for_a_review"
                                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>
                                    </LinearLayout>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"/>
                                    <RatingBar
                                        style="?android:attr/ratingBarStyleIndicator"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:isIndicator="false"
                                        android:contentDescription="@string/desc_rate_item"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_columnSpan="2"
                        android:layout_gravity="fill"
                        app:cardElevation="0dp"
                        android:layout_marginTop="@dimen/dimen_grid_margin_step">
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:padding="@dimen/dimen_default_margin_step"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/outline_home_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dimen_default_margin_step"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:text="@string/label_gift_cards"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/round_background"
                                android:text="@string/label_currency"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </GridLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="#707070"
                    android:layout_marginHorizontal="@dimen/dimen_default_margin_step"
                    android:layout_marginTop="@dimen/dimen_default_margin_half_step"
                    android:text="@string/label_settings" />
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_default_margin_step"
                    android:layout_marginHorizontal="@dimen/dimen_default_margin_step"
                    android:text="@string/label_product_subscriptions"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="4dp"
                    android:layout_marginTop="@dimen/dimen_default_margin_step"
                    android:layout_marginBottom="@dimen/dimen_default_margin_half_step"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:insetTop="0dp"
                    android:gravity="start"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_default_margin_step"
                    android:layout_marginHorizontal="@dimen/dimen_default_margin_step"
                    android:text="@string/label_product_subscriptions"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="4dp"
                    app:icon="@drawable/outline_home_24"
                    app:iconGravity="end"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:insetTop="0dp"
                    android:gravity="start"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_default_margin_step"
                    android:layout_margin="@dimen/dimen_default_margin_step">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.1"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_check_for_updates" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!--<include layout="@layout/toolbar_profile"
        android:id="@+id/profile_toolbar"/>-->
</androidx.coordinatorlayout.widget.CoordinatorLayout>