<resources>
    <style name="Widget.Theme.LamodaCopy.AnyView" parent="">
        <item name="android:background">@color/gray_200</item>
    </style>
    <style name="Widget.Theme.LamodaCopy.AnyView.AccentBackground" parent="">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Button.LamodaCopy.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/lighter_black</item>
        <item name="rippleColor">@color/gray_200</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <style name="Widget.Button.LamodaCopy.IconButton.TopAlignment" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/lighter_black</item>
        <item name="android:textColor">@color/lighter_black</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="iconGravity">top</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="rippleColor">@color/gray_400</item>
    </style>

    <style name="Widget.Button.LamodaCopy.TextButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.ExtraSmall</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="Widget.Button.LamodaCopy.ListButtonItem" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">@dimen/dimen_default_margin_step</item>
        <item name="android:textAlignment">textStart</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/black</item>
        <item name="rippleColor">@color/gray_200</item>
    </style>

    <style name="rating_bar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_400</item>
        <item name="colorControlActivated">@color/sunset_yellow</item>
    </style>

    <style name="Widget.Slider.LamodaCopy.IndicatorSlider" parent="Widget.Material3.Slider">
        <item name="tickRadiusActive">@dimen/dimen_grid_margin_step</item>
        <item name="tickRadiusInactive">@dimen/dimen_grid_margin_step</item>
        <item name="tickColorActive">@color/black</item>
        <item name="tickColorInactive">@color/gray_200</item>

        <item name="trackColorActive">@color/black</item>
        <item name="trackColorInactive">@color/gray_200</item>
        <item name="trackHeight">1dp</item>

        <item name="thumbColor">@color/black</item>
        <item name="thumbElevation">0dp</item>
        <item name="labelBehavior">visible</item>
        <item name="labelStyle">@style/Widget.Tooltip.LamodaCopy.IndicatorSlider</item>
    </style>
    
    <style name="Widget.Tooltip.LamodaCopy.IndicatorSlider" parent="Widget.Material3.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Theme.LamodaCopy.TabTextAppearance" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.LamodaCopy.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextColor">?colorOnPrimary</item>
        <item name="tabTextAppearance">@style/Theme.LamodaCopy.TabTextAppearance</item>
        <item name="tabIndicatorColor">?colorOnPrimary</item>
    </style>
</resources>